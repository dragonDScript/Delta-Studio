{
  "build": {
    "asar": false,
    "files": [
      "!*",
      "dist/main.js",
      "dist/renderer.*",
      "dist/index.html",
      "build/icon.*"
    ]
  },
  "productName": "Delta Studio",
  "name": "delta-studio",
  "version": "0.0.1",
  "description": "A code editor.",
  "main": "dist/main.js",
  "repository": "https://github.com/dragonDScript/delta-studio.git",
  "author": "dragonDScript, gaetgu",
  "license": "MIT",
  "private": true,
  "scripts": {
    "dev": "inotifywait -q -m -e close_write ./src/**/* | while read file; do node build/build.js; done & electron .",
    "package": "node build/build.js && electron-builder",
    "lint": "eslint ./src/*/* --fix"
  },
  "devDependencies": {
    "@electron-forge/maker-zip": "^6.0.0-beta.54",
    "@types/electron": "^1.6.10",
    "@types/node": "^14.14.25",
    "@types/react": "^17.0.2",
    "@types/react-dom": "^17.0.1",
    "@typescript-eslint/eslint-plugin": "^4.15.0",
    "@typescript-eslint/parser": "^4.15.0",
    "cross-env": "^7.0.3",
    "electron": "^11.2.3",
    "electron-builder": "^22.9.1",
    "esbuild": "^0.8.43",
    "eslint": "^7.19.0",
    "eslint-config-standard": "^16.0.2",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^4.3.1",
    "typescript": "^4.1.4"
  },
  "dependencies": {
    "@uiw/react-codemirror": "^3.0.5",
    "codemirror": "^5.59.2",
    "react": "^17.0.1",
    "react-dom": "^17.0.1"
  }
}
